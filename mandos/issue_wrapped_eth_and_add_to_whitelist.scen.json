{
    "name": "issue wrapped ETH and add to whitelist",
    "steps": [
        {
            "step": "externalSteps",
            "path": "setup.scen.json"
        },
        {
            "step": "setState",
            "accounts": {
                "address:owner": {
                    "nonce": "7",
                    "balance": "5000000000000000000",
                    "storage": {}
                }
            }
        },
        {
            "step": "scCall",
            "txId": "wrapped-eth-issue",
            "tx": {
                "from": "address:owner",
                "to": "address:esdt_token_manager_contract",
                "value": "5000000000000000000",
                "function": "issueEsdtToken",
                "arguments": [
                    "str:WrappedETH",
                    "str:WETH",
                    "1,000",
                    "18"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*",
                "logs": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:owner": {
                    "nonce": "8",
                    "balance": "0",
                    "storage": {}
                },
                "address:block_header_sync_contract": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {},
                    "code": "file:../BlockHeaderSync/output/block-header-sync.wasm"
                },
                "address:cross_chain_management_contract": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "str:headerSyncContractAddress": "address:block_header_sync_contract",
                        "str:tokenManagementContractAddress": "address:esdt_token_manager_contract",
                        "str:ownChainId": "42",
                        "tokenWhitelist.value|u32:1": "str:WEGLD-123456"
                    },
                    "code": "file:../CrossChainManagement/output/cross-chain-management.wasm"
                },
                "address:esdt_token_manager_contract": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:WEGLD-123456": "1,000",
                        "str:WETH-123456": "1,000"
                    },
                    "storage": {
                        "str:crossChainManagementContractAddress": "address:cross_chain_management_contract",
                        "str:wrappedEgldTokenIdentifier": "str:WEGLD-123456",
                        "str:lastIssuedTokenIdentifier": "str:WETH-123456",
                        "str:totalWrappedRemaining.mapped|str:WEGLD-123456": "1,000",
                        "str:totalWrappedRemaining.mapped|str:WETH-123456": "1,000"
                    },
                    "code": "file:../EsdtTokenManager/output/esdt-token-manager.wasm"
                }
            }
        },
        {
            "step": "scCall",
            "txId": "add-wrapped-eth-to-whitelist",
            "tx": {
                "from": "address:owner",
                "to": "address:cross_chain_management_contract",
                "value": "0",
                "function": "addTokenToWhitelist",
                "arguments": [
                    "str:WETH-123456"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*",
                "logs": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:owner": {
                    "nonce": "8",
                    "balance": "0",
                    "storage": {}
                },
                "address:block_header_sync_contract": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {},
                    "code": "file:../BlockHeaderSync/output/block-header-sync.wasm"
                },
                "address:cross_chain_management_contract": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "str:headerSyncContractAddress": "address:block_header_sync_contract",
                        "str:tokenManagementContractAddress": "address:esdt_token_manager_contract",
                        "str:ownChainId": "42",
                        "tokenWhitelist.value|u32:1": "str:WEGLD-123456",
                        "tokenWhitelist.value|u32:2": "str:WETH-123456"
                    },
                    "code": "file:../CrossChainManagement/output/cross-chain-management.wasm"
                },
                "address:esdt_token_manager_contract": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:WEGLD-123456": "1,000",
                        "str:WETH-123456": "1,000"
                    },
                    "storage": {
                        "str:crossChainManagementContractAddress": "address:cross_chain_management_contract",
                        "str:wrappedEgldTokenIdentifier": "str:WEGLD-123456",
                        "str:lastIssuedTokenIdentifier": "str:WETH-123456",
                        "str:totalWrappedRemaining.mapped|str:WEGLD-123456": "1,000",
                        "str:totalWrappedRemaining.mapped|str:WETH-123456": "1,000"
                    },
                    "code": "file:../EsdtTokenManager/output/esdt-token-manager.wasm"
                }
            }
        }
    ]
